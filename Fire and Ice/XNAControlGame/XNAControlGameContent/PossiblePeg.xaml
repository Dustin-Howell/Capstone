<Group xmlns="http://schemas.microsoft.com/nine/2011/xaml">
    <Sphere Transform.Scale="5, 5, 5">
        <BasicMaterial Alpha="0" />
    </Sphere>
    <ParticleEffect Texture="{ContentReference Textures/flake}" ParticleType="ConstrainedBillboard" Stretch="8">
        <ParticleEffect.Emitter>
            <PointEmitter Emission="10" Duration="2 ~ 3" Speed="-0.01 ~ 0.01" Size="3 ~ 4.5" />
        </ParticleEffect.Emitter>
        <FadeController />
    </ParticleEffect>
</Group>
