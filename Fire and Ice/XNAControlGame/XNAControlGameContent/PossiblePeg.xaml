<Group xmlns="http://schemas.microsoft.com/nine/2011/xaml" Name="PossiblePegGroup" >
    <Model Name="PossiblePeg" Source="{ContentReference ./Model/PossiblePeon/Peon}" Transform.Scale=".25, .25, .25" Visible="True" >
        <ModelAttachment>
            <ParticleEffect Name="Spark" Texture="{ContentReference ./Textures/flake}" ParticleType="ConstrainedBillboard" Stretch="8">
                <ParticleEffect.Emitter>
                    <PointEmitter Emission="10" Duration="2 ~ 3" Speed="-0.01 ~ 0.01" Size="1 ~ 1.5" />
                </ParticleEffect.Emitter>
                <FadeController />
            </ParticleEffect>
        </ModelAttachment>
    </Model>
</Group>