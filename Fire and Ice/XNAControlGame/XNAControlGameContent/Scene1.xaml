<Scene xmlns="http://schemas.microsoft.com/nine/2011/xaml" >

    <!--<SkyBox Color="255,255,255"/>-->
    <FreeCamera Name="MainCamera" Speed="100" Position="106.6, 234.1, 235.78" Angle="1.14,0,0"/>

    <AmbientLight AmbientLightColor="0.0, 0.0, 0.0" Enabled="True" />
    <DirectionalLight DiffuseColor="1.0, 1.0, 1.0" Transform.Scale="-10,-10,-10" Direction="1, -1, 1" />


    <Group Name="GameBoard">
        <Surface Name="boardSurface" Heightmap.Width="108" Heightmap.Height="108" Heightmap.Step="2"
             PatchSegmentCount="2" Transform.Position="0, 0, 0" >
            <BasicMaterial LightingEnabled="True" Texture="{ContentReference Assets/MainBoard}" IsTransparent="True" />
        </Surface>
    </Group>

</Scene>