<Application x:Class="FireAndIce.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FireAndIce">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources.xaml" />
                <ResourceDictionary>
                    <local:AppBootStrapper x:Key="boostrapper" />
                </ResourceDictionary>
                <ResourceDictionary Source="Styles/Buttons.xaml" />
                <ResourceDictionary Source="ColorSchemes/Default.xaml" />
                <ResourceDictionary Source="Effects/Effects.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
