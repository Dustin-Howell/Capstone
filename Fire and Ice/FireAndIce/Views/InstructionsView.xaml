<f:SlideOutControl x:Class="FireAndIce.Views.InstructionsView"
                 xmlns:f="clr-namespace:FireAndIce.Views"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
                   Dock="Right">
    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                Background="{StaticResource Primary1}" Margin="50">
        <Label Name="Goal" HorizontalAlignment="Center" Content="Goal" FontFamily="pack://application:,,,/Fonts/#The Dreamer" FontSize="60"/>
        <TextBlock Name="GoalText" TextWrapping="Wrap" Foreground="White" Margin="20" FontSize="14"/>

        <Label Name="Rules" HorizontalAlignment="Center" Content="Rules" FontFamily="pack://application:,,,/Fonts/#The Dreamer" FontSize="60"/>
        <TextBlock Name="RuleText" TextWrapping="Wrap" Foreground="White" Margin="20" FontSize="14"/>

        <Label Name="EndGame" HorizontalAlignment="Center" Content="End Game"  FontFamily="pack://application:,,,/Fonts/#The Dreamer" FontSize="60"/>
        <TextBlock Name="EndGameText" TextWrapping="Wrap" Foreground="White" Margin="20" FontSize="14"/>
    </StackPanel>
</f:SlideOutControl>
