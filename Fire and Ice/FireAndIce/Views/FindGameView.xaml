<UserControl x:Class="FireAndIce.Views.FindGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Foreground="White"
            TextWrapping="NoWrap"
            FontSize="20"
            FontFamily="pack://application:,,,/Fonts/#Holy Empire"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            x:Name="Title" />
        
        <ListBox x:Name="FoundGames" />
        
        <TextBox x:Name="PlayerName" />
        <Button x:Name="RefreshFoundGames">Refresh Games</Button>
        <Button x:Name="FindGameClick">Start</Button>
    </StackPanel>
</UserControl>
