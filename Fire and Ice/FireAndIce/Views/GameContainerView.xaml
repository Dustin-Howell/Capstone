<UserControl x:Class="FireAndIce.Views.GameContainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xna="clr-namespace:XNAControl;assembly=XNAControl">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Border Background="{StaticResource Primary1}"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Panel.ZIndex="2">
            <Button VerticalAlignment="Bottom"
                HorizontalAlignment="Stretch"
                x:Name="ReturnToMainMenu">
                Quit
            </Button>
        </Border>
        <xna:XNAUserControl x:Name="XNAControl"
                            Grid.Row="0"
                            Grid.Column="1"/>
        <Border Grid.Row="1"
                Grid.ColumnSpan="2"
                Background="{StaticResource Complementary1}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                />
    </Grid>
    
</UserControl>
