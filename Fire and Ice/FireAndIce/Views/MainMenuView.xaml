<UserControl x:Class="FireAndIce.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black">
        <Border Height="50"
                    DockPanel.Dock="Bottom"
                    Background="{StaticResource Complementary1}">
            <StackPanel Orientation="Horizontal">

            </StackPanel>

        </Border>
        <Border Width="200"
                DockPanel.Dock="Left"
                Background="{StaticResource Primary1}"
                Panel.ZIndex="2"
                Effect="{StaticResource DropShadow}"
                x:Name="MainMenuBorder">
            
            <!--Main Menu-->
            <StackPanel x:Name="MainMenuButtonPanel" HorizontalAlignment="Stretch"
                    Orientation="Vertical"
                    Background="Transparent"
                    VerticalAlignment="Center">
                <ToggleButton x:Name="NewGame" IsChecked="{Binding NewGameChecked}">New Game</ToggleButton>
                <ToggleButton x:Name="Help">Help</ToggleButton>
                <ToggleButton x:Name="HighScore">High Scores</ToggleButton>
                <ToggleButton x:Name="Settings">Settings</ToggleButton>
                <ToggleButton x:Name="Credits">Credits</ToggleButton>
            </StackPanel>
        </Border>
        
        <Grid HorizontalAlignment="Stretch" 
              VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <ContentControl x:Name="ActiveItem" Grid.Column="0" Panel.ZIndex="5"/>

            <!--Main Area-->
            <Border Background="White"
                    Effect="{StaticResource DropShadow}"
                    x:Name="MainArea"
                Grid.ColumnSpan="3"
                Panel.ZIndex="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Image Source="../Images/Fire and Ice Logo.png"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"/>
            </Border>
        </Grid>

    </DockPanel>
</UserControl>
